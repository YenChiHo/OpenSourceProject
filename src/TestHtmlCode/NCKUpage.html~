            $(function() { 
            var browserHeight=$(window).height();
            $("#map_canvas").height(browserHeight);
            
                $('#map_canvas').gmap().bind('init', function(ev, map) {
	                $('#map_canvas').gmap('addMarker', {'position': '22.996274,120.218185', 'bounds': true});
                });	
                
                $('#map_canvas').gmap({'zoom':1});
		});
        </script>
        

 
